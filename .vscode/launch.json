{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug API (TypeScript)",
      "runtimeArgs": ["--enable-source-maps", "--loader", "ts-node/esm"],
      "program": "${workspaceFolder}/src/server.ts",
      "env": { "PORT": "3000", "NODE_ENV": "development" },
      "sourceMaps": true,
      "smartStep": true,
      "resolveSourceMapLocations": ["${workspaceFolder}/**", "!**/node_modules/**"],
      "console": "integratedTerminal",
      "skipFiles": ["<node_internals>/**"]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Tests (Vitest current file)",
      "runtimeArgs": ["--enable-source-maps"],
      "program": "${workspaceFolder}/node_modules/vitest/vitest.mjs",
      "args": ["run", "${file}", "--pool=threads", "--poolOptions.threads.singleThread=true"],
      "autoAttachChildProcesses": true,
      "sourceMaps": true,
      "smartStep": true,
      "resolveSourceMapLocations": ["${workspaceFolder}/**", "!**/node_modules/**"],
      "console": "integratedTerminal",
      "skipFiles": ["<node_internals>/**"]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug One Test Name",
      "runtimeArgs": ["--enable-source-maps"],
      "program": "${workspaceFolder}/node_modules/vitest/vitest.mjs",
      "args": [
        "run",
        "test/verify.test.ts",
        "-t",
        "returns early on invalid syntax",
        "--pool=threads",
        "--poolOptions.threads.singleThread=true"
      ],
      "autoAttachChildProcesses": true,
      "sourceMaps": true,
      "smartStep": true,
      "resolveSourceMapLocations": ["${workspaceFolder}/**", "!**/node_modules/**"],
      "console": "integratedTerminal",
      "skipFiles": ["<node_internals>/**"]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug CLI (Built dist)",
      "program": "${workspaceFolder}/dist/bin/pm-email-validator.js",
      "args": ["user@gmail.com"],
      "sourceMaps": true,
      "smartStep": true,
      "resolveSourceMapLocations": ["${workspaceFolder}/**", "!**/node_modules/**"],
      "outFiles": ["${workspaceFolder}/dist/**/*.js"],
      "console": "integratedTerminal",
      "skipFiles": ["<node_internals>/**"]
    },
    {
      "type": "node",
      "request": "attach",
      "name": "Attach Node (9229)",
      "port": 9229,
      "restart": true,
      "skipFiles": ["<node_internals>/**"]
    }
  ]
}
